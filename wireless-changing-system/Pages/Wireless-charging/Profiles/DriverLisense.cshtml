        <!-- Khu vực chứa các license-item -->
        <div class="license-view">
            <!-- Mỗi license-item là 1 thẻ GPLX + 2 nút bên phải -->
            <div class="license-item">
                <!-- Bên trái: .license-card -->
                <div class="license-card">
                    <!-- Header THẺ GPLX -->
                    <div class="license-card-header">
                        <!-- BỘ GTVT (trái) -->
                        <div class="license-card-header-left">
                            <strong>BỘ GTVT</strong>
                        </div>
                        <!-- Quốc hiệu (giữa) -->
                        <div class="license-card-header-center">
                            <div>CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM</div>
                            <div>Độc lập - Tự do - Hạnh phúc</div>
                        </div>
                    </div>

                    <!-- Tiêu đề GPLX -->
                    <div class="license-card-title">
                        <h4>GIẤY PHÉP LÁI XE</h4>
                        <small>DRIVER'S LICENSE</small>
                    </div>
                    <!-- Số GPLX (đặt dưới tiêu đề) -->
                    <div class="license-card-header-center">
                        Số No: 99017000806
                    </div>

                    <!-- Khu vực chính: Ảnh + Thông tin -->
                    <div class="license-card-main">
                        <!-- Ảnh chân dung -->
                        <div class="license-card-photo">
                            <img src="https://via.placeholder.com/100x120" alt="Ảnh chân dung">
                            <div class="photo-hint">(3x4)</div>
                        </div>

                        <!-- Thông tin chi tiết -->
                        <div class="license-card-info">
                            <div class="info-row">
                                <span class="label">Họ tên/Full name:</span>
                                <span class="value">NGUYỄN VĂN A</span>
                            </div>
                            <div class="info-row">
                                <span class="label">Ngày sinh/Date of Birth:</span>
                                <span class="value">25/12/1992</span>
                            </div>
                            <div class="info-row">
                                <span class="label">Quốc tịch/Nationality:</span>
                                <span class="value">VIỆT NAM</span>
                            </div>
                            <div class="info-row">
                                <span class="label">Nơi cư trú/Address:</span>
                                <span class="value">P. Đông Sơn, TP. Thanh Hóa, T. Thanh Hóa</span>
                            </div>

                            <!-- Hạng và Giá trị đến (cùng hàng) -->
                            <div class="info-row-inline">
                                <div>
                                    <span class="label">Hạng/Class:</span>
                                    <span class="value">B1</span>
                                </div>
                                <div>
                                    <span class="label">Giá trị đến/Valid until:</span>
                                    <span class="value">25/12/2052</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="license-actions">
                    <button class="btn btn-warning btn-action mb-2">
                        <i class="bi bi-pencil-square"></i>
                        Cập nhật
                    </button>
                    <button class="btn btn-danger btn-action">
                        <i class="bi bi-trash"></i>
                        Xóa
                    </button>
                </div>
            </div>
            <!-- Thêm license-item khác nếu cần -->
        </div>
    </div>
</div>
