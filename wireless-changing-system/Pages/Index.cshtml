@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>
    <!-- Hero Section -->
    <header class="section bg-light hero-section">
        <div class="container text-center py-5">
            <h1 class="display-4 mb-3">Wireless EV Charging</h1>
            <p class="lead text-muted mb-4">Smart and convenient aircraft vehicle charging solution</p>
            <div class="row g-4 justify-content-center">
                <div class="col-auto">
                    <span class="badge bg-primary">Automatically charged</span>
                </div>
                <div class="col-auto">
                    <span class="badge bg-success">Secure</span>
                </div>
                <div class="col-auto">
                    <span class="badge bg-info">Portable</span>
                </div>
            </div>
        </div>
    </header>
    <!-- Feature Section -->
    <section class="feature-section">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="feature-card">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="feature-card1">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="charging-section">
        <div class="container text-center position-relative">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <h2 class="fw-bold mb-3 display-7">
                        An intelligent and convenient solution for electric car charging.
                    </h2>

                    <p class="mb-4 fs-5">
                        Automatically charges while parked - No need to plug in

                    </p>

                    <a href="#" class="btn btn-light charging-cta">
                        Get Started Now
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- Key Features -->
    <section id="features" class="section bgsmoke">
        <div class="container">
            <h2 class="text-center mb-5">Key Features</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-lightning feature-icon"></i>
                            <h3>Automatic Charging</h3>
                            <p>Commercial aviation installation with smart detection system</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-map feature-icon"></i>
                            <h3>Charging Station Map</h3>
                            <p>Real-time underground station monitoring and maintenance</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-wallet feature-icon"></i>
                            <h3>Automatic Payment</h3>
                            <p>Smart battery combination system with seamless integration</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us -->
    <section id="why-us" class="section bgsmoke">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose This System?</h2>
            <div class="row g-4">
                <div class="col-md-3 text-center">
                    <div class="card h-100">
                        <i class="bi bi-robot feature-icon"></i>
                        <h4>Automatic & Convenient</h4>
                        <p>Fully autonomous vehicle integration</p>
                    </div>
                </div>
                <div class="col-md-3 text-center ">
                    <div class="card h-100">

                        <i class="bi bi-shield-check feature-icon"></i>
                        <h4>Sole & Effective</h4>
                        <p>Certified safety standards</p>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="card h-100">

                        <i class="bi bi-cpu feature-icon"></i>
                        <h4>Smart Management</h4>
                        <p>AI-powered airframe integration</p>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="card h-100">

                        <i class="bi bi-tools feature-icon"></i>
                        <h4>Car Rental Support</h4>
                        <p>Comprehensive safety services</p>
                    </div>
                </div>
            </div>
        </div>
    </section>



</body>
