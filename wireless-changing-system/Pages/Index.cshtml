@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<body>
    <!-- Hero Section -->
    <header class="section bg-light hero-section">
        <div class="container text-center py-5">
            <h1 class="display-5 fw-bold mb-3">Sạc Không Dây cho Ô tô Điện</h1>
            <p class="lead text-muted mb-4">Giải pháp sạc thông minh và tiện lợi cho phương tiện hàng không</p>
            <div class="row g-4 justify-content-center">
                <div class="col-auto">
                    <span class="badge bg-primary">Tự động sạc</span>
                </div>
                <div class="col-auto">
                    <span class="badge bg-success">Bảo mật</span>
                </div>
                <div class="col-auto">
                    <span class="badge bg-info">Di động</span>
                </div>
            </div>
        </div>
    </header>

    <!-- Feature Section -->
    <section class="feature-section">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="feature-card">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="feature-card1">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="charging-section">
        <div class="container text-center position-relative">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <h2 class="fw-bold mb-3 display-7">
                        Giải pháp thông minh và tiện lợi cho sạc xe điện
                    </h2>

                    <p class="mb-4 fs-5">
                        Tự động sạc khi đỗ xe - Không cần cắm dây
                    </p>

                    <a href="#" class="btn btn-light charging-cta">
                        Bắt Đầu Ngay
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Key Features -->
    <section id="features" class="section bgsmoke">
        <div class="container">
            <h2 class="text-center mb-5">Tính Năng Chính</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-lightning feature-icon"></i>
                            <h3>Sạc Tự Động</h3>
                            <p>Lắp đặt cho hàng không thương mại với hệ thống phát hiện thông minh</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-map feature-icon"></i>
                            <h3>Bản Đồ Trạm Sạc</h3>
                            <p>Giám sát và bảo trì trạm ngầm theo thời gian thực</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-wallet feature-icon"></i>
                            <h3>Thanh Toán Tự Động</h3>
                            <p>Hệ thống kết hợp pin thông minh với tích hợp liền mạch</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us -->
    <section id="why-us" class="section bgsmoke">
        <div class="container">
            <h2 class="text-center mb-5">Tại Sao Chọn Hệ Thống?</h2>
            <div class="row g-4">
                <div class="col-md-3 text-center">
                    <div class="card h-100">
                        <i class="bi bi-robot feature-icon"></i>
                        <h4>Tự Động & Tiện Lợi</h4>
                        <p>Tích hợp tự động hoàn toàn với phương tiện</p>
                    </div>
                </div>
                <div class="col-md-3 text-center ">
                    <div class="card h-100">
                        <i class="bi bi-shield-check feature-icon"></i>
                        <h4>An Toàn & Hiệu Quả</h4>
                        <p>Tiêu chuẩn an toàn được chứng nhận</p>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="card h-100">
                        <i class="bi bi-cpu feature-icon"></i>
                        <h4>Quản Lý Thông Minh</h4>
                        <p>Tích hợp khung máy bay sử dụng AI</p>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="card h-100">
                        <i class="bi bi-tools feature-icon"></i>
                        <h4>Hỗ Trợ Thuê Xe</h4>
                        <p>Dịch vụ an toàn toàn diện</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

