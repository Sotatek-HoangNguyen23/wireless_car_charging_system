<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ Thống Sạc Không Dây</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand" href="/">
                    <img src="/img/logo.png"
                         alt="Logo Hệ Thống Sạc Không Dây"
                         width="40"
                         height="40"
                         class="img-fluid">
                </a>

                <!-- Nút toggle cho mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Các mục điều hướng -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/wireless-charging/chargingstation/stationlist">Trạm Sạc</a>
                        </li>

                        <li class="nav-item dropdown d-none role-based-menu" data-required-role="Operator, Station Owner">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Quản Lý
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/wireless-charging/chargingstation/stationlist">Quản lý trạm sạc</a></li>
                                <li><a class="dropdown-item" href="/wireless-charging/management/carlist">Quản lý xe</a></li>
                                <li><a class="dropdown-item" href="/wireless-charging/management/userlist">Quản lý người dùng</a></li>
                                <li><a class="dropdown-item" href="/wireless-charging/management/feedbacklist">Quản lý phản hồi</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown d-none role-based-menu" data-required-role="Operator, Station Owner">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Thống kê
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/wireless-charging/dashboard/overview">Tổng quan</a></li>
                                <li><a class="dropdown-item" href="/wireless-charging/dashboard/revenue">Doanh thu</a></li>
                                <li><a class="dropdown-item" href="/wireless-charging/dashboard/session">Thống kê phiên sạc</a></li>
                                <li><a class="dropdown-item" href="/wireless-charging/dashboard/user">Thống kê người dùng</a></li>
                            </ul>
                        </li>

                        <li class="nav-item d-none role-based-menu" data-required-role="Driver">
                            <a class="nav-link" href="https://localhost:5216/wireless-charging/vehicles/mycars">Xe của tôi</a>
                        </li>
                        <li class="nav-item d-none role-based-menu" data-required-role="Driver">
                            <a class="nav-link" href="/wireless-charging/payment/depositmoney">Nạp tiền</a>
                        </li>  

                        <li class="nav-item d-none role-based-menu" data-required-role="Driver">
                            <a class="nav-link" href="/wireless-charging/feedback">Phản hồi của người dùng</a>
                        </li>
                    </ul>

                    <!-- Phần xác thực -->
                    <div class="d-flex" id="authSection">
                        <a href="/wireless-charging/auth" class="btn btn-outline-secondary me-2">Đăng Nhập</a>
                        <a href="/wireless-charging/auth/register" class="btn btn-primary">Đăng Ký</a>
                    </div>

                    <!-- Phần người dùng -->
                    <div class="d-none" id="userSection">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="" alt="Ảnh đại diện" class="rounded-circle" width="30" height="30" id="userAvatar">
                                <span class="ms-2" id="userName"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/wireless-charging/profiles">Hồ Sơ</a></li>
