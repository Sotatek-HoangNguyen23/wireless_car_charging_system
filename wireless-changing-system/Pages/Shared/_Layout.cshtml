<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wireless_changing_system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.css">
 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <div class="container">
                <!-- Brand/Logo -->
                <a class="navbar-brand" href="/">
                    <img src="/img/logo.png"
                         alt="Wireless Charging System Logo"
                         width="40"
                         height="40"
                         class="img-fluid">
                </a>

                <!-- Toggle Button cho mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left-aligned navigation -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home Page</a>
                        </li>
                        <li class="nav-item d-none role-based-menu" data-required-role="Admin">
                            <a class="nav-link" href="/wireless-charging/chargingstation/stationlist">Changing Station</a>
                        </li>

                        <li class="nav-item d-none role-based-menu" data-required-role="Admin">
                            <a class="nav-link" href="/management">Management Dashboard</a>
                        </li>

                        <li class="nav-item d-none role-based-menu" data-required-role="User,Admin">
                            <a class="nav-link" href="/my-devices">My Devices</a>
                        </li>
                    </ul>

                    <div class="d-flex" id="authSection">
                        <a href="/wireless-charging/auth" class="btn btn-outline-secondary me-2">Sign in</a>
                        <a href="/wireless-charging/auth/register" class="btn btn-primary">Register</a>
                    </div>
                    <div class="d-none" id="userSection">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="" alt="Avatar" class="rounded-circle" width="30" height="30" id="userAvatar">
                                <span class="ms-2" id="userName"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                <li><a class="dropdown-item" id="logoutBtn" href="#">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-content">
            <div class="social-icons">
                <a href="#" target="_blank" aria-label="Facebook">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" target="_blank" aria-label="X (Twitter)">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="#" target="_blank" aria-label="Instagram">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="#" target="_blank" aria-label="YouTube">
                    <i class="bi bi-youtube"></i>
                </a> 
                <a href="#" target="_blank" aria-label="Linkedin">
                    <i class="bi bi-linkedin"></i>
                </a>
            </div>
            <p class="copyright">
                &copy; 2025 - wireless_changing_system - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </p>
        </div>
       
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js-cookie/js.cookie.min.js"></script>
    <script type="module" src="~/js/apiClient.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const accessToken = sessionStorage.getItem("accessToken");
            if (accessToken) {
                const fullName = sessionStorage.getItem("fullName");
                const role = sessionStorage.getItem("role");
                const menuItems = document.querySelectorAll('.role-based-menu');
                menuItems.forEach(item => {
                    const requiredRoles = item.getAttribute('data-required-role').split(',');
                    if (requiredRoles.includes(role)) {
                        item.classList.remove('d-none');
                    }
                });

                const defaultAvatarUrl = '@Url.Content("~/img/avartar.jpg")';
                const avatarUrl = sessionStorage.getItem("avatar_url") || defaultAvatarUrl;
                document.getElementById("userName").textContent = fullName;
                document.getElementById("userAvatar").src = avatarUrl;
                document.getElementById("authSection").classList.add("d-none");
                document.getElementById("userSection").classList.remove("d-none");
            }
    
            const logoutBtn = document.getElementById("logoutBtn");
            if (logoutBtn) {
                logoutBtn.addEventListener("click", function (e) {
                e.preventDefault();
                logout();
             });
            }
        });
    </script>
    <script type="module">
        import { logout } from '/js/apiClient.js';

        document.getElementById("logoutBtn").addEventListener("click", function(e) {
            e.preventDefault();
            logout();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>