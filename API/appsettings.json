{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    // Thay thế bằng chuỗi kết nối SQL Server của bạn.
    // Ví dụ:
    // "Server=your_server.database.windows.net;Database=your_db;User Id=your_user;Password=your_password;TrustServerCertificate=True;"
    "value": "<your_sql_server_connection_string>"
  },

  "Jwt": {
    // Audience là tên client hoặc hệ thống sẽ sử dụng JWT
    "Audience": "<your_jwt_audience>",

    // Issuer là tên của hệ thống cấp token
    "Issuer": "<your_jwt_issuer>"
  },

  "Redis": {
    // Chuỗi kết nối Redis. Thường có dạng: host:port,password=your_password,ssl=True
    "ConnectionString": "<your_redis_connection_string>"
  },

  "SmtpSettings": {
    // SMTP server để gửi email. Ví dụ với Gmail: smtp.gmail.com
    "Server": "<your_smtp_server>",

    // Port gửi email. Gmail dùng 587 hoặc 465
    "Port": 587,

    // Tên hiển thị trong email gửi đi, ví dụ: "WCCS System"
    "SenderName": "<your_sender_name>",

    // Tài khoản email dùng để gửi thư.
    "Username": "<your_smtp_username>"
  }
}
